<div class="jumbotron">
  <h1>Ceramic items from <br>
      around the world.</h1>
  <h2>Discover one-of-a-kind items</h2>
</div>

<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url), listing %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            <h5><p><%= "Upload by #{listing.user.name}" %></p></h5>
            <p><%= listing.description %></p>
            <p><%= listing.details %></p>
          </div>
        </div>
      </div>
    <% end %> 
  </div>
</div>

<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class:"btn btn-link" %>
<% end %>