<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= image_tag listing.image.url(:medium) %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= listing.description %></p>
            <p></p><%= listing.details %></p>
            <%= link_to 'Show', listing, class:"btn btn-link" %>
            <%= link_to 'Edit', edit_listing_path(listing), class:"btn btn-link" %>
            <%= link_to 'Destroy', listing, class:"btn btn-link", method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
      </div>
    <% end %> 
  </div>
</div>
